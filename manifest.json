{
  "manifest_version": 3,
  "name": "quickTranslate",
  "version": "0.8",
  "author": "Ola Krassowska",
  "description": "Translate words directly on the current page. ver : alfa 0.8",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "functions.js",
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["functions.js", "main.js"]
  }],
  "action": {
    "default_icon": "logo.png"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}